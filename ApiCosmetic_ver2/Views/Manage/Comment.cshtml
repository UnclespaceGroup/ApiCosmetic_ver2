@using ApiCosmetic_ver2.Models.Context
@model IEnumerable<Comment>


<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Автор</td>
                <td>Отзыв</td>
            </tr>
        </thead>
        <tbody>
            @foreach(Comment c in Model)
            {
            <tr>
                <td>@c.AuthorId</td>
                <td>@c.ReviewId</td>
                <td>@c.Title</td>
                <td>@c.Text</td>
                <td>@c.Description</td>
                <td>@c.Date</td>
                <td><button class="delete-comment btn btn-primary" data-id=@c.Id>Удалить</button></td>
            </tr>
            }
        </tbody>
    </table>
</div>
